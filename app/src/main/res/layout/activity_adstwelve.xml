<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdstwelveActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/blur">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/countDownTwelve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#EC0000"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Task Twelve"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#F50057"/>

    </LinearLayout>




    <Button
        android:id="@+id/nextTaskTwelve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Task"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texttwo"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wwww.dogearn.info"
        android:textAlignment="center"
        android:textSize="30dp"/>

</LinearLayout>